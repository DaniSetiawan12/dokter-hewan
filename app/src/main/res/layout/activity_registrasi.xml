<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="15dp"
    android:background="#F5F5F5"
    tools:context=".users.registrasi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="REGISTRASI"
        android:textColor="@color/md_blue_grey_500"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/NamaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_username"
                    android:hint="Nama Lengkap"
                    android:drawableTint="@color/colorPrimary"
                    android:inputType="textAutoComplete"
                    android:padding="10dip" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Email"
                    android:drawableTint="@color/colorPrimary"
                    android:inputType="textEmailAddress"
                    android:padding="10dip" />

                <EditText
                    android:id="@+id/Notelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone"
                    android:hint="No. Telpon"
                    android:drawableTint="@color/colorPrimary"
                    android:inputType="text"
                    android:padding="10dip" />

                <EditText
                    android:id="@+id/Katasandi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_pass"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Kata Sandi"
                    android:inputType="textPassword"
                    android:padding="10dip" />


                <Button
                    android:id="@+id/btnRegistrasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimary"
                    android:text="Daftar"
                    android:textColor="@color/md_white_1000"
                    android:textSize="13dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sudah Punya Akun ? Masuk Disini"
                    android:textAllCaps="false"
                    android:gravity="right"
                    android:id="@+id/btnLinklogin"
                    android:background="@null"
                    android:textColor="@color/md_blue_grey_500"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>